<span class="grid grid-rows-2 grid-cols-[minmax(60px,_1fr)_minmax(10em,_auto)] px-2">
  <span class="row-span-2 mr-2">
    <img src="<%= StockQuote::Stock.logo(@stock).url %>" alt="<%= @stock[0].upcase %> logo" class="absolute top-0 bottom-0 m-auto rounded align-middle max-h-[60px] max-w-[60px]">
  </span>
  <span class="mx-2 col-start-2">
    <%= "#{@stock[0].upcase}" %>
    <span class="text-gray-400">
      <%= number_to_currency(@stock[1][:price]) %>
    </span>
  </span>
  <span class="mx-2 col-start-2 <%= @stock[1][:percent].positive? ? "text-green-400" : "text-red-400" %>">
    <%= "#{@stock[1][:percent].positive? ? "↑" : "↓"} #{number_to_currency(@stock[1][:dollar])} #{@stock[1][:percent]}%" %>
  </span>
</span>
